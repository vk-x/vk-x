.im-mess
  & > .vkx-message-time
    float left
    display inline-block
    margin-top 3px
    margin-left 15px
    width 55px
    text-align right
    font-size 12px
    color rgba(120, 127, 140, 0.6)
    // Fixes weird bug with new unread messages overlapping time of
    // the previous message.
    z-index 2

  // Unread messages have smaller containers and don't need this margin.
  &.im-mess_unread > .vkx-message-time
    margin-left -10px

  // Nested (forwarded) messages should be positioned consistently.
  &.im-mess_fwd > .vkx-message-time
    margin-top 0
    position absolute
    left -85px

  // Forwarded messages in a popup shouldn't get out of the box.
  .box_body & > .vkx-message-time
    margin-right -10px
