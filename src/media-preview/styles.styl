a[title$='.webm'], a[title$='.gifv'], a[title$='.mp4']
  &:not(.vkx-expanded)
    &:after
      content "+"
      color rgba(120, 127, 140, 0.8)
      display inline-block
      padding 0 5px
      margin 0 5px
      background-color rgba(80, 114, 153, 0.05)

    &:hover:after
      background-color rgba(80, 114, 153, 0.3)
